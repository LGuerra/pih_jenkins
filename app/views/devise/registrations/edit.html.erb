<div class="sign-in-container">
<div class="sign-up-form fadeInDown animated">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if devise_error_messages! != '' %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <strong>Error en los datos.</strong> Verifique la información
      </div>
    <% else %>
      <h2>Cambiar contraseña</h2>
    <% end %>

    <div class="form-group">
      <div class="input-group form-group  has-feedback has-feedback-left">
        <span class="input-group-addon"><i class="form-control-feedback fa fa-lock"></i></span>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input', placeholder: 'Nueva contraseña' %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group form-group  has-feedback has-feedback-left">
        <span class="input-group-addon"><i class="form-control-feedback fa fa-lock"></i></span>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input', placeholder: 'Confirmar contraseña' %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group form-group  has-feedback has-feedback-left">
        <span class="input-group-addon"><i class="form-control-feedback fa fa-lock"></i></span>
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control input', placeholder: 'Contraseña actual'%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Guardar", class: 'init-session pull-right blue-button' %>
    </div>
  <% end %>
  <a href="/">Cancelar</a>
</div>
